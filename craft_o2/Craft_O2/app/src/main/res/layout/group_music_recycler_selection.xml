<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/group_music_selection"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_margin="6dp"
    >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/statusColor1"
                    android:layout_width="7.5dp"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="32dp"
                    />
                <!--android:src="@color/colorNormal"-->
                <ImageView
                    android:id="@+id/statusColor2"
                    android:layout_width="7.5dp"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="32dp"
                    />
                <!--android:src="@color/colorSoundCloud"-->
                <ImageView
                    android:id="@+id/albumArt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"

                    android:adjustViewBounds="true"
                    android:layout_marginLeft="0.25dp"
                    android:layout_marginBottom="32dp"
                    />
                <!--app:srcCompat="@drawable/disc"-->
            </LinearLayout>
            <!-- タイトル/ 曲数など -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0FFFFFF"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/group_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="グループ名"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/track_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6曲"
                        android:textAlignment="textEnd"
                        android:layout_marginBottom="4dp"
                        android:layout_marginRight="4dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="bottom"
                />
        </FrameLayout>
</LinearLayout>